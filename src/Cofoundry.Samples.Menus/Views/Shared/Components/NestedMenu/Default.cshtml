@model NestedMenuViewModel

@if (Model.Items == null)
{
    <p>Nested Menu with the identifier <strong>"@Model.MenuId"</strong> not defined.</p>
}
else
{
    <ul class="nav nav-pills">
        @foreach (var item in Model.Items)
        {
            @if (item.ChildItems.Any())
            {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="@item.PageRoute.FullPath" role="button" aria-haspopup="true" aria-expanded="false">
                    @item.Title
                </a>
                <div class="dropdown-menu">
                    @foreach(var childItem in item.ChildItems)
                    {
                    <a class="dropdown-item" href="@childItem.PageRoute.FullPath">@childItem.Title</a>
                    }
                </div>
            </li>
            }
            else
            {
            <li class="nav-item">
                <a class="nav-link" href="@item.PageRoute.FullPath">@item.Title</a>
            </li>
            }
        }
    </ul>
}

